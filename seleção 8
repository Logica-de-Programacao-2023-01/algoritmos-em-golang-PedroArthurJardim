//Faça um algoritmo que leia um número inteiro entre 1 e 7 e mostre o dia da semana correspondente (1 = domingo, 2 = segunda-feira, etc.).

package main

import ("fmt")

func main() {
  var x int  
  fmt.Print("Informe um número de 1 a 7 ")
  fmt.Scan(&x)

  if x == 1{
    fmt.Print("É segunda")
  } else if x == 2{
    fmt.Print("É terça")
  } else if x == 3{
    fmt.Print("É quarta")
  } else if x == 4{
    fmt.Print("É quinta")
  } else if x == 5{
    fmt.Print("É sexta")
  } else if x == 6{
    fmt.Print("É sabado")
  } else if x == 7{
    fmt.Print("É domingo")
  } else{
    fmt.Print("Valor inválido ")
  } 
}  
